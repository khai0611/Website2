
@{
    ViewBag.Title = "ViewBag.namecategory";
    Layout = "~/Views/Shared/layout.cshtml";
}

<h2>@ViewBag.namecategory</h2>

<p>Page @ViewBag.page</p>

@for (int i = 1; i <= ViewBag.page; i++)
{
    <div class="prod_box">
        <div class="center_prod_box">
            <div class="product_title"><a href="~/Product/ProductInfo">Makita 156 MX-VL</a></div>
            <div class="product_img"><a href="~/Product/ProductInfo"><img src="~/Theme/images/p1.jpg" alt="" border="0" /></a></div>
            <div class="prod_price"><span class="reduce">350$</span> <span class="price">270$</span></div>
        </div>
        <div class="prod_details_tab"> <a href="~/Product/ProductInfo" class="prod_buy">Add to Cart</a> <a href="~/Product/ProductInfo" class="prod_details">Details</a> </div>
    </div>
}
