<head>
    <title>@ViewBag.title</title>
    <meta http-equiv="Content-Type" content="text/html; charset=windows-1252" />
    <!--[if IE 6]>
    <link rel="stylesheet" type="text/css" href="iecss.css" />
    <![endif]-->
    <link href="~/Theme/css/style.css" rel="stylesheet" />
