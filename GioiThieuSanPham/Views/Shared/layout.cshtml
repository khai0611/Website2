            <!-- end of right content -->
        </div>
        <!-- end of main content -->
        <div class="footer">
            <div class="left_footer"> <img src="~/Theme/images/footer_logo.png" alt="" width="89" height="42" /> </div>
            <div class="center_footer">
                Template name. All Rights Reserved 2008<br />
                <a href="http://csscreme.com"><img src="~/Theme/images/csscreme.jpg" alt="csscreme" title="csscreme" border="0" /></a><br />
                <img src="~/Theme/images/payment.gif" alt="" />
